									"//       \"language\":\"\", ",
									"//       \"lastEdited\":\"\"",
									"//   }",
									"// }`;",
									"",
									"const schema = {",
									"    title: 'Snippet Meta Data',",
									"    type: 'object',",
									"    properties: {",
									"        snippetName: 'string',",
									"        language: 'string',",
									"        lastEdited: 'string', // should be a timestamp",
									"    },",
									"    required: ['snippetName', 'language', 'lastEdited'],",
									"};",
									"const isValidJSON = (str) => {",
									"    try {",
									"        JSON.parse(str);",
									"    } catch (e) {",
									"        return false;",
									"    }",
									"    return true;",
									"};",
									"const bodyIsValidJSON = isValidJSON(responseBody);",
									"",
									"// Tests",
									"tests['Status code is 200'] = responseCode.code === 200;",
									"tests['Body is valid JSON'] = bodyIsValidJSON;",
									"",
									"// Only run these tests if response is valid JSON",
									"if (bodyIsValidJSON) {",
									"    const body = JSON.parse(responseBody);",
									"    const bodyIsJSONObj = Object.prototype.toString.call(body) === '[object Object]';",
									"    tests['Body is a JSON object'] = bodyIsJSONObj;",
									"    if (bodyIsJSONObj) {",
									"        tests['Body obj keys are valid snippet meta data'] = ",
									"          Object.keys(body)",
									"                .reduce((acc, key) => acc && tv4.validate(body[key], schema), true);",
									"    }",
									"}"
								]
							}
						}
